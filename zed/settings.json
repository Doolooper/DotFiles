// https://zed.dev/docs/configuring-zed
{
  // settings
  "theme": "Kanagawa Dragon",
  "features": {
    "copilot": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },
  "cursor_blink": false,
  "vertical_scroll_margin": 0,
  "vim_mode": true,
  "relative_line_numbers": true,
  // buffer
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  // ui
  "ui_font_size": 16,
  // editor
  "autosave": "on_window_change"
}
